{
    "manifest_version": 3,
    "version": "0.4.5",
    "name": "CtrlBlock",
    "description": "Take control of your browsing experience and browse the web you want, not the one we've got!",
    "background": {
        "service_worker": "/src/js/background/serviceWorker.js",
        "type": "module"
    },
    "action": {
        "default_title": "Click to open panel",
        "default_icon": {
            "16": "/images/logo/16.png",
            "24": "/images/logo/24.png",
            "32": "/images/logo/32.png"
        }
    },
    "icons": {
        "16": "/images/logo/16.png",
        "24": "/images/logo/24.png",
        "32": "/images/logo/32.png",
        "128": "/images/logo/128.png"
    },
    "side_panel": {
        "default_path": "/src/sidepanel/index.html"
    },
    "permissions": ["activeTab", "declarativeNetRequest", "storage", "scripting", "sidePanel", "tabs"],
    "host_permissions": ["<all_urls>"]
}
